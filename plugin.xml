	<platform name="android">
		<source-file src="src/android/libs/classes.jar" target-dir="libs" />
		<source-file src="src/android/libs/DeviceAPIver20150906.jar" target-dir="libs" />
		<source-file src="src/android/libs/hitownsdk.jar" target-dir="libs" />
		<source-file src="src/android/libs/ModuleAPI_Android_2.31.0.0.jar" target-dir="libs" />
		<source-file src="src/android/libs/trinea-android-common.jar" target-dir="libs" />

		<source-file src="src/android/libs/armeabi/libModuleAPI_Android.so" target-dir="src/main/jniLibs/armeabi"/>
		<source-file src="src/android/libs/armeabi/libscan_jni.so" target-dir="src/main/jniLibs/armeabi"/>
		<source-file src="src/android/libs/armeabi-v7a/libModuleAPI_Android.so" target-dir="src/main/jniLibs/armeabi-v7a"/>
		<source-file src="src/android/libs/armeabi-v7a/libscan_jni.so" target-dir="src/main/jniLibs/armeabi-v7a"/>

		<source-file src="src/android/nl/xservices/plugins/base/ICordovaPlugin.java" target-dir="src/nl/xservices/plugins/base" />
