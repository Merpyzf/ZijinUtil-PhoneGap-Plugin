		<source-file src="src/android/nl/xservices/plugins/MyApp.java" target-dir="src/nl/xservices/plugins" />
		<source-file src="src/android/nl/xservices/plugins/utils/DevBeep.java" target-dir="src/nl/xservices/plugins/utils" />
        <source-file src="src/android/nl/xservices/plugins/ZijinUtil.java" target-dir="src/nl/xservices/plugins" />

		<resource-file src="src/android/raw/beep_err.wav" target="res/raw/beep_err.wav" />
		<resource-file src="src/android/raw/beep_ok.wav" target="res/raw/beep_ok.wav" />

		<config-file parent="/*" target="res/xml/config.xml">
			<feature name="ZijinUtil"><param name="android-package" value="nl.xservices.plugins.ZijinUtil" /></feature>
		</config-file>

		<framework src="src/android/build.gradle" custom="true" type="gradleReference" />
	</platform>
</plugin>
